<!DOCTYPE html>
<html lang="en">
<head>
    <title>mylistings</title>
    <!-- BootstrapCDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles/mylistings_style.css">
    <link href="https://fonts.googleapis.com/css?family=Lobster|Roboto:300,400,500,700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="scripts/mylistings_script.js"> </script>
</head>
<body>
    {{> clock}}
    {{> navbar}}


    <div>
        <div class="container mylistings" id="mylistings">
            <h1 id="my">my.</h1>
            <h1 id="listings">listings.</h1>
            
            <div class="row">
                <script>var x=0;</script>
                {{!-- ongoing --}}
                <div class="title"><h1>Ongoing Listings</h1></div>
                <br>
                {{#each olisting}}
                    <div class="col-md-6">
                        <div class="card" style="width: 25rem;">
                            <img src={{{images.[0]}}} class="card-img-top" alt="product">
                            <div class="card-body">
                                <h5 class="card-title" > {{name}}</h5>
                                <p class="card-text" > {{description}} </p>
                                <h6 class="prices"><span> {{startPrice}} </span>php - <span> {{buyOutPrice}} </span>php</h6>
                                <div class="row">
                                    <div class="col-md-6 card-button">
                                        <a href="listing.html" class="btn btn-secondary btn-block bid">View</a> 
                                    </div>
                                    <div class="col-md-6 card-button">
                                        <a href="/editlisting" class="btn btn-secondary btn-block bid"> Edit</a>  
                                    </div>
                                
                                </div>
                            </div>
                        </div>
                    <script>
                        x++;
                    if(x%2==0){
                        $("#mylistings").append("</div> <div class=\"row\"");
                        x=0;
                    }
                    </script>
                    </div>
                {{/each}}

                {{!-- completed --}}
                <div class="title"><h1>Completed Listings</h1></div>
                {{#each clisting}}
                    <div class="col-md-6">
                        <div class="card" style="width: 25rem;">
                            <img src={{{images.[0]}}} class="card-img-top" alt="product">
                            <div class="card-body">
                                <h5 class="card-title" > {{name}} </h5>
                                <p class="card-text" > {{description}} </p>
                                <h6 class="prices">winner: @{{highestBidder}} </h6>
                                <h6 class="prices"><span> {{highestBid}} </span>php</h6>
                                <button class="btn btn-secondary btn-block bid" id="completed" disabled>Completed</a>
                            </div>
                        </div>
                    </div>
                    <script>
                        x++;
                    if(x%2==0){
                        $("#mylistings").append("</div> <div class=\"row\"");
                        x=0;
                    }
                    </script>
                {{/each}}

                
            </div>
        </div> 
    </div>   

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>

</html>
